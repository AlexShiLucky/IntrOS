#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto msg = MessageQueueT<1>();

void slave()
{
	unsigned x;

	for (;;)
	{
		msg.wait(&x);
		led = x;
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		ThisTask::delay(SEC);
		msg.give(++x);
	}
}

auto sla = Task(slave);
auto mas = Task(master);

int main()
{
	sla.start();
	mas.start();

	ThisTask::stop();
}
