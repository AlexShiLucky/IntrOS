#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto stm = StreamBufferTT<1, unsigned>();

void slave()
{
	unsigned x;

	for (;;)
	{
		stm.wait(&x, sizeof(x));
		led = x;
	}
}

void master()
{
	unsigned x = 15;

	for (;;)
	{
		ThisTask::delay(SEC);
		stm.send(&x, sizeof(x));
		x++;
	}
}

auto sla = Task(slave);
auto mas = Task(master);

int main()
{
	sla.start();
	mas.start();

	ThisTask::stop();
}
