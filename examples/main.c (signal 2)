#include <stm32f4_discovery.h>
#include <os.h>

sig_id sig = SIG_CREATE(sigClear);

void slave()
{
	sig_wait(sig);
	LED_Tick();
}

void master()
{
	tsk_delay(SEC);
	sig_give(sig);
}

tsk_id sla = TSK_CREATE(slave);
tsk_id mas = TSK_CREATE(master);

int main()
{
	LED_Init();

	tsk_start(sla);
	tsk_start(mas);
	tsk_sleep();
}
