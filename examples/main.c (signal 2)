#include <stm32f4_discovery.h>
#include <os.h>

sig_id sig = SIG_CREATE(sigClear);

void slave()
{
	sig_wait(sig);

	LED_Tick();
}

void master()
{
	tsk_delay(SEC);

	sig_give(sig);
}

int main()
{
	LED_Config();

	sys_init();
	tsk_start(TSK_CREATE(slave));
	tsk_start(TSK_CREATE(master));
	tsk_sleep();
}
